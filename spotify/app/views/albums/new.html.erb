<form action="<%=albums_url%>" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<label for="name">Name:
    <input type="text" name="album[title]">
</label>
<br>
<label for="band">Band:
    <select name="album[band_id]">
    <% Band.all.each do |band| %>
        <option value="<%= band.id %>"><%= band.name %></option>
        <% end %>
    </select>
</label>
<br>
<label for="year">Year:
    <input type="integer" name="album[year]">
</label>
<br>
<label for="Live?">Live?
    <input type="radio" name="alblum[live?]" value="true"> True
    <input type="radio" name="alblum[live?]" value="true"> False
</label>
<br>
<input type="submit" value="Create Band">
</form>